&
  position relative
  top 40px
  .axis.x
    position absolute
    top -40px
    margin-left 23px
    .item
      float left
      text-align center
      padding 0px 3px
      font-variant small-caps
      &:after
        display block
        content " "
        width 100%
        height 2px
        border 1px dotted #a
        border-bottom 0px none
  .axis.y
    position absolute
    top 0px
    left 0px
    width 20px
    z-index 1
    font-variant small-caps
    .item
      position absolute
      left 0px
      right 0px
      text-align right
      font-size 11px
      line-height 11px
      &:after
        position absolute
        content " "
        top 11px
        left 23px
        width 976px
        border-bottom 1px solid lighten(black, 92%)

  canvas
    position relative
    z-index 2
  .monthContainer
    position absolute
    top 0px
    left 23px
    z-index 3
    .col
      float left
      width 8px
      height 100%
      background transparent
      position relative
      z-index 1
      .temp
        display none
        position absolute
        left 0px
        pointer-events none
        white-space nowrap
        transform translate(0, -50%)
        padding-left 36px
        margin-top -1px
        font-variant small-caps
        &.avg
          line-height 38px
        &:before
          content " "
          width 10px
          border-bottom 1px dotted #a
          position absolute
          top 50%
          left 14px
      &.right
        .temp
          text-align right
          padding-left 0px
          padding-right 36px
          left auto
          right 0px
          &:before
            left auto
            right 14px

    &:hover
      .col
        background rgba(255,255,255,0.9)
        &:hover
          background transparent
          z-index 2
          .temp
            display block
  svg
    z-index 2
    position absolute
    top 0px
    left 23px
    path
      fill none
      stroke lighten(desaturate(ColorHeadingLink, 50%), 60%)
      stroke-width 1.5
  .monthContainer:hover ~ svg
    opacity 0.1
  .year-axis
    position absolute
    top 685px
    left 23px
    h2
      font-weight normal
      margin 0px
      font-size 16px
      font-variant small-caps
      margin-bottom 10px
      text-align right
    ol
      list-style-type none
      margin 0px
      padding 0px
    li
      float left
      width (976px / 211)
      height 30px
      position relative
      &:after
        content " "
        position absolute
        left 50%
        height 3px
        top 0px
        border-right 1px solid #a
      &.big:after
        height 7px
      span
        display none
        top 10px
        position absolute
        z-index 4
        margin-left 2px
        transform translate(-50%, 0)
        pointer-events none
      &.big
        span
          display block
    &:hover
      li:after
        height 3px
      li
        &.big span
          display none
        &:hover
          span
            display block
          &:after
            height 7px
        &.left
          span
            transform translate(-100%, 0)

  &.average
    .monthContainer:hover ~ svg
      opacity 1
    .monthContainer:hover .col
      background rgba(255,255,255,0.5)
      &:hover
        background transparent
        border-left 1px solid #f0
        border-right 1px solid #f0


  .legend
    position absolute
    left 25px
    top 480px
    font-variant small-caps
    padding 11px
    border 1px dashed #d6
    ul
      margin 0px
      padding 0px
      list-style-type none
      li
        padding 0px
        position relative
        padding-left 17px
        &:before
          position absolute
          top 6px
          left 0px
          content " "
          border-radius 50%
          width 6px
          height 6px
      &:first-of-type
        margin-bottom 10px
        li:first-of-type:before
          background rgb(254,217,118)
        li:last-of-type:before
          background rgb(189,0,38)
      &:last-of-type
        li:first-of-type:before
          background rgb(8,81,156)
        li:last-of-type:before
          background rgb(198,219,239)


